<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.saxion.act.playground"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="Siege of Zubrowka">
        <activity
            android:name="nl.voorbeeld.SoZ.MainActivity"
            android:label="@string/SiegeOfZubrowka" >
            android:parentActivityName="nl.voorbeeld.coolgame.MenuSchermActivity" 
            android:screenOrientation="portrait"
 			android:configChanges="keyboardHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.voorbeeld.coolgame.MenuSchermActivity" />
        </activity>
        
        
        <activity
            android:name="nl.voorbeeld.SoZ.GameOverActivity"
            android:label="@string/title_activity_gameover" >
			android:parentActivityName="nl.voorbeeld.coolgame.MainActivity" 
			android:screenOrientation="portrait"
  			android:configChanges="keyboardHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.voorbeeld.coolgame.MainActivity" />
        </activity>
        
        <activity
            android:name="nl.voorbeeld.SoZ.CutsceneActivity"
            android:label="@string/title_activity_cutscenes" >
			android:parentActivityName="nl.voorbeeld.coolgame.MainActivity" 
			android:screenOrientation="portrait"
  			android:configChanges="keyboardHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.voorbeeld.coolgame.cutscenes" />
        </activity>
        
        <activity
            android:name="nl.voorbeeld.SoZ.ShopActivity"
            android:label="@string/title_activity_shop" >
			android:parentActivityName="nl.voorbeeld.coolgame.MainActivity" 
			android:screenOrientation="portrait"
  			android:configChanges="keyboardHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.voorbeeld.coolgame.shop" />
        </activity>
        
        <activity
            android:name="nl.voorbeeld.SoZ.MenuSchermActivity"
            android:label="@string/title_activity_menuScherm" 
            android:screenOrientation="portrait"
  			android:configChanges="keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
